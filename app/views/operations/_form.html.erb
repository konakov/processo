<%= form_for @operation do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :goal %><br />
    <%= f.text_field :goal %>
  </p>
  <p>
    <%= f.label :instruction %><br />
    <%= f.text_area :instruction %>
  </p>
  <p>
    <%= f.label :in %><br />
    <%= f.text_area :in %>
  </p>
  <p>
    <%= f.label :out %><br />
    <%= f.text_area :out %>
  </p>
  <p><%= f.submit %></p>
<% end %>
